CREATE TABLE tbl_account (
    id              INT(11)          NOT NULL AUTO_INCREMENT  PRIMARY KEY,
    user_id         VARCHAR(255)     DEFAULT NULL,
    balance         INT(11)          DEFAULT 0
) ENGINE = INNODB DEFAULT CHARSET = utf8;

